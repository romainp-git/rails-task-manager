<div class="container">
  <h1>My tasks</h1>
  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item">
        <input class="form-check-input" type="checkbox" id="<%= task.id %>" <%= task.completed ? "checked" : "" %> >
        <%= link_to task.title, task_path(task) %> || <%= task.details%>
      </li>
    <% end %>
  </ul>
  <%= link_to "Add a task", new_task_path %>
</div>
